#suite LCP

#include "fcs.c"
#include "hdlc.c"
#include "ipv6cp.c"


#test check_ipv6cp_send_conf_req
uint8_t buffer[2000];

FILE* stream = fmemopen(buffer, sizeof(buffer), "wb");
ipv6cp_send_conf_req(stream);
ck_assert_uint_eq(ftell(stream), 38);
ck_assert_mem_eq(
  buffer,
  "\x7e\xff\x7d\x23\x80\x57\x7d\x21\x7d\x21\x7d\x20\x7d\x2e\x7d\x21"
  "\x7d\x2a\x7d\x20\x7d\x20\x7d\x20\x7d\x20\x7d\x20\x7d\x20\x7d\x20"
  "\x7d\x22\x7d\x2f\x76\x7e",
  38
);
